{
    "name": "silverstripe/cms-events",
    "description": "Triggers events for common actions in Silverstripe CMS",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "CMS",
        "events"
    ],
    "license": "BSD-3-Clause",
    "require": {
        "silverstripe/framework": "^5",
        "silverstripe/event-dispatcher": "^1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "SilverStripe\\CMSEvents\\": "src/",
            "SilverStripe\\CMSEvents\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "scripts": {
        "lint": "vendor/bin/phpcs src/ tests/",
        "lint-clean": "vendor/bin/phpcbf src/ tests/"
    },
    "conflict": {
        "silverstripe/graphql": "< 3.2.1"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/vendor-plugin": true
        }
    }
}
